{{#> layout/default title="Login"}}
	{{#*inline "content"}}
		<div class="post">
			<article class="post-content fullwidth">
				<div class="login-container">
					<div id="form" class="contact-form">
						<h1>Login</h1>
						{{#if errorMessage}}
							<div class="row">
								<div class="alert alert-danger col-md-12" role="alert">
									{{errorMessage}}
								</div>
							</div>
						{{/if}}
						<form id="login-form" method="post" action="/login">
							<div class="form-group">
								<label for="username">Email</label>
								<input type="text" id="email" name="email" class="form-control" placeholder="Email">
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input type="password" id="password" name="password" class="form-control" placeholder="Password">
							</div>
							<button type="submit" class="btn btn-danger">Login</button>
						</form>
						<div id="user-info" class="row">
							<a class="col-sm" href="/login/find-password">Forgot Password?</a>
							<a class="col-sm" href="/login/join-us">Join Us</a>
						</div>
					</div>
				</div>
			</article>
		</div>
	{{/inline}}
	{{#*inline "js"}}
		<script src="/assets/libs/js/jquery.validate.min.js"></script>
		<script src="/assets/js/login.js"></script>
	{{/inline}}
{{/layout/default}}