{{#> layout/default title="Join Us"}}
	{{#*inline "content"}}
		<div class="post">
			<article class="post-content fullwidth">
				<div class="login-container">
					<div id="form" class="contact-form">
						<h1>Join Us</h1>
						{{#if errorMessage}}
						<div class="row">
							<div class="alert alert-danger col-md-12" role="alert">
								{{errorMessage}}
							</div>
						</div>
						{{/if}}
						<form id="join-us-form" method="post" action="/login/join-us" class="needs-validation">
							<div class="row">
								<div class="form-group col-md-12">
									<label for="username">Email</label>
									<div class="input-group">
										<input type="email" id="email" name="email" class="form-control" placeholder="Email">
										<div class="input-group-append">
											<button id="btn-email-authentication" type="button" class="btn btn-primary">인증 요청</button>
										</div>
									</div>
								</div>
								<div id="email-confirm" class="form-group col-md-12" style="display: none">
									<div class="input-group">
										<input type="text" id="confirm-code" name="code" class="form-control" placeholder="Code">
										<div class="input-group-append">
											<button id="btn-authentication-check" type="button" class="btn btn-success">인증 확인</button>
										</div>
									</div>
								</div>
								<div class="form-group col-md-12">
									<label for="username">User name</label>
									<input type="text" id="username" name="username" class="form-control" placeholder="User name">
								</div>
								<div class="form-group col-md-6">
									<label for="password">Password</label>
									<input type="password" id="password" name="password" class="form-control" placeholder="Password">
								</div>
								<div class="form-group col-md-6">
									<label for="password-confirm">Password Confirm</label>
									<input type="password" id="password-confirm" name="password-confirm" class="form-control" placeholder="Password Confirm">
								</div>
								<input type="hidden" name="{{csrf_parameter}}" value="{{csrf_token}}">
								<div class="form-group col-md-12">
									<button type="submit" class="btn btn-primary">Join Us</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</article>
		</div>
	{{/inline}}
	{{#*inline "js"}}
		<script src="/assets/libs/js/jquery.validate.min.js"></script>
		<script src="/assets/js/join-us.js"></script>
	{{/inline}}
{{/layout/default}}