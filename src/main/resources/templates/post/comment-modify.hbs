{{#> layout/default title="Comment"}}
	{{#*inline "content"}}
		<div class="col-md-12 empty-div" xmlns="http://www.w3.org/1999/html"></div>
		<div class="col-md-12 d-flex justify-content-center">
			<div class="col-md-8">
				<h1>Comment</h1>
				{{#if errorMessage}}
					<div class="alert alert-danger" role="alert">
						{{errorMessage}}
					</div>
				{{/if}}
				<form id="commentForm" action="/post/comment?pId={{pId}}&cId={{cId}}" method="post">
					<div class="form-row devflix-post">
						<div class="form-group col-md-12">
							<textarea id="content" name="content"></textarea>
							<input type="hidden" name="path-base" value="" id="path-base">
						</div>
					</div>
					<input type="hidden" name="{{csrf_parameter}}" value="{{csrf_token}}">
					<div class="d-flex justify-content-center button-box">
						<button type="submit" class="btn btn-primary">수정</button>
						<a href="/post/{{pId}}" class="btn btn-secondary">이전</a>
					</div>
				</form>
			</div>
		</div>
	{{/inline}}
	{{#*inline "js"}}
		<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
		<script>
			$(function () {
			    $('#content').summernote({
				    toolbar: false,
				    height: 120
			    });

			    $('#commentForm').on('submit', function () {
			        if ($('#content').summernote('isEmpty')) {
			            alert('수정 내용 기입해 주세요.');

			            return false;
			        }

			        return true;
			    })
			})
		</script>
	{{/inline}}
{{/layout/default}}