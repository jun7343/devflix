{{#> layout/default title="Devflix" background-black=true}}
	{{#*inline "content"}}
		<style>
			.page-link {
				color: black;
				background-color: white;
				border-style: hidden;
				font-weight: 800;
				margin-top: 50px;
			}
			.empty {
				height: 100px;
			}
		</style>
		<main class="home no-padding" role="main">
			<div class="col-md-12 empty">
			</div>
			<h1 class="title-category">{{#eq type 'tag'}}#{{else}}/{{/eq}}  {{parameter}}</h1>
			<section id="grid" class="row-main flex-grid">
				{{#each list}}
					<article class="box-item">
          <span class="category">
            <a href="/category/{{category}}">
                <span>{{ category }} - {{ postType }}</span>
            </a>
          </span>
						<div class="box-body">
							<a class="cover view-anchor" href="{{url}}">
								{{>layout/include/loader}}
								<img src="/assets/img/placeholder.png" width="100%" data-url="{{ thumbnail }}" class="preload">
								<noscript>
									<img src="{{ thumbnail }}" width="100%">
								</noscript>
								{{#isNewPost createAt}}
									{{>layout/include/new-post-tag}}
								{{/isNewPost}}
								{{#eq postType 'BLOG'}}
									{{>layout/include/read-icon}}
								{{else}}
									{{>layout/include/watch-icon}}
								{{/eq}}
							</a>
							<div class="box-info">
								<time datetime="{{ uploadAt }}" class="date">
									{{df uploadAt "MMM d, yyyy"}}
								</time>
								<a class="post-link view-anchor" href="{{ url }}">
									<h2 class="post-title">
										{{{ title }}}
									</h2>
								</a>
								<a class="post-link view-anchor" href="{{ url }}">
									<p class="description">{{{textOverflow description 100}}}</p>
								</a>
								{{#if tag}}
									<div class="tags">
										{{#each tag}}
											<a href="/tag/{{this}}">#{{ this }}</a>
										{{/each}}
									</div>
								{{/if}}
							</div>
						</div>
					</article>
				{{/each}}
			</section>
			{{#if pagination}}
				<nav id="nav-pagination" aria-label="Page navigation">
					<ul class="pagination justify-content-center">
						{{#if previousPage}}
							<li class="page-item">
								<a class="page-link" href="/{{type}}/{{parameter}}?page={{previousPageNum}}" aria-label="Previous">
								<span aria-hidden="true">&laquo;</span>
								<span class="sr-only">Previous</span>
								</a>
							</li>
						{{/if}}
						{{#each pageNumList}}
							<li class="page-item {{#eq this currentPageNum}}active{{/eq}}"><a class="page-link" href="/{{type}}/{{parameter}}?page={{sub this 1}}">{{this}}</a></li>
						{{/each}}
						{{#if nextPage}}
							<li class="page-item">
								<a class="page-link" href="/{{type}}/{{parameter}}?page={{nextPageNum}}" aria-label="Next">
								<span aria-hidden="true">&raquo;</span>
								<span class="sr-only">Next</span>
								</a>
							</li>
						{{/if}}
					</ul>
				</nav>
			{{/if}}
		</main>
	{{/inline}}
	{{#*inline "js"}}
	{{/inline}}
{{/layout/default}}