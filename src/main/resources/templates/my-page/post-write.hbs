{{#> layout/default title="Comment Alert List"}}
	{{#*inline "content"}}
		<div class="col-md-12 empty-div">
		</div>
		<div class="col-md-12 d-flex justify-content-center post-list-container">
			<div class="col-md-8">
				<h1>My Post Write</h1>
				{{#if errorMessage}}
					<div class="alert alert-danger" role="alert">
						{{errorMessage}}
					</div>
				{{/if}}
				<table class="table table-hover">
					<thead>
					<tr>
						<th scope="col" class="list-title">Title</th>
						<th scope="col" class="list-writer">Writer</th>
						<th scope="col" class="list-publish-at">Publish At</th>
					</tr>
					</thead>
					<tbody>
					{{#if list}}
						{{#each list}}
							<tr>
								<td class="item-title"><a href="/post/read/{{id}}" class="post-list-title">{{{unEscape title}}}</a></td>
								<td class="item-writer">{{{writer.username}}}</td>
								<td class="item-publish-at">{{df createAt "yyyy.MM.dd"}}</td>
							</tr>
						{{/each}}
					{{/if}}
					</tbody>
				</table>
				{{#if pagination}}
					<nav id="nav-pagination" aria-label="Page navigation">
						<ul class="pagination justify-content-center">
							{{#if previousPageNum}}
								<li class="page-item">
									<a class="page-link" href="/my-page/post-write?page={{previousPageNum}}" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
									<span class="sr-only">Previous</span>
									</a>
								</li>
							{{/if}}
							{{#each pageNumList}}
								<li class="page-item {{#eq this currentPageNum}}active{{/eq}}"><a class="page-link" href="/my-page/post-write?page={{sub this 1}}">{{this}}</a></li>
							{{/each}}
							{{#if nextPageNum}}
								<li class="page-item">
									<a class="page-link" href="/my-page/post-write?page={{nextPageNum}}" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
									<span class="sr-only">Next</span>
									</a>
								</li>
							{{/if}}
						</ul>
					</nav>
				{{/if}}
			</div>
		</div>
	{{/inline}}
	{{#*inline "js"}}
	{{/inline}}
{{/layout/default}}