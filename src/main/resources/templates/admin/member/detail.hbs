{{#>admin/layout/default title=item.username nav='member'}}
	{{#*inline "content"}}
		<style>
			.btn-div .btn {
				margin: 0 8px;
			}
		</style>
		<main>
			<div class="container-fluid">
				<h1 class="mt-4">{{item.username}}</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">Member</li>
					<li class="breadcrumb-item">{{item.username}}</li>
				</ol>
				<div class="card mb-12">
					<div class="card-body">
						{{#if errorMessage}}
							<div class="row">
								<div class="alert alert-danger col-md-12" role="alert" style="text-align: center">
									{{errorMessage}}
								</div>
							</div>
						{{/if}}
						{{#if successMessage}}
							<div class="row">
								<div class="alert alert-success col-md-12" role="alert" style="text-align: center">
									{{successMessage}}
								</div>
							</div>
						{{/if}}
						<div class="table-responsive">
							<form id="member-detail-form" action="/dfa/member/{{item.id}}" method="post">
								<div class="form-group row">
									<label for="username" class="col-sm-1 col-form-label">Username</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="username" value="{{{item.username}}}" readonly>
									</div>
								</div>
								<div class="form-group row">
									<label for="email" class="col-sm-1 col-form-label">Email</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="email" value="{{item.email}}" readonly>
									</div>
								</div>
								<div class="form-group row">
									<legend class="col-form-label col-sm-1 pt-0">Authority</legend>
									<div class="col-sm-10">
										<div class="form-check">
											<input class="form-check-input" type="checkbox" name="authority" id="admin" value="ROLE_ADMIN" {{#contain item.authority 'ROLE_ADMIN'}}checked{{/contain}}>
											<label class="form-check-label" for="admin">
												ADMIN
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="checkbox" name="authority" id="manager" value="ROLE_MANAGER" {{#contain item.authority 'ROLE_MANAGER'}}checked{{/contain}}>
											<label class="form-check-label" for="manager">
												MANAGER
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="checkbox" name="authority" id="user" value="ROLE_USER" {{#contain item.authority 'ROLE_USER'}}checked{{/contain}}>
											<label class="form-check-label" for="user">
												USER
											</label>
										</div>
									</div>
								</div>
								<div class="form-group row">
									<legend class="col-form-label col-sm-1 pt-0">Status</legend>
									<div class="col-sm-10">
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-wait" value="WAIT" {{#eq item.status 'WAIT'}}checked{{/eq}}>
											<label class="form-check-label" for="status-wait">
												WAIT
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-lock" value="LOCK" {{#eq item.status 'LOCK'}}checked{{/eq}}>
											<label class="form-check-label" for="status-lock">
												LOCK
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-expired" value="EXPIRED" {{#eq item.status 'EXPIRED'}}checked{{/eq}}>
											<label class="form-check-label" for="status-expired">
												EXPIRED
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-active" value="ACTIVE" {{#eq item.status 'ACTIVE'}}checked{{/eq}}>
											<label class="form-check-label" for="status-active">
												ACTIVE
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-withdrawal" value="WITHDRAWAL" {{#eq item.status 'WITHDRAWAL'}}checked{{/eq}}>
											<label class="form-check-label" for="status-withdrawal">
												WITHDRAWAL
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-credential-expired" value="CREDENTIAL_EXPIRED" {{#eq item.status 'CREDENTIAL_EXPIRED'}}checked{{/eq}}>
											<label class="form-check-label" for="status-credential-expired">
												CREDENTIAL EXPIRED
											</label>
										</div>
									</div>
								</div>
								<input type="hidden" name="{{csrf_parameter}}" value="{{csrf_token}}">
								<div class="form-group row">
									<label for="writer" class="col-sm-2 col-form-label"></label>
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary col-sm-2">수정</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</main>
	{{/inline}}
	{{#*inline "js"}}
	{{/inline}}
{{/admin/layout/default}}