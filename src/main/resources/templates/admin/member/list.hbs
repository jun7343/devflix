{{#>admin/layout/default title="Devflix Member List" nav='member'}}
	{{#*inline "content"}}
		<style>
			.btn-div .btn {
				margin: 0 8px;
			}
		</style>
		<main>
			<div class="container-fluid">
				<h1 class="mt-4">Member</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">Member</li>
				</ol>
				<div class="card mb-4">
					<div class="card-body">
						<div id="form" class="contact-form">
							<form id="member-search-form" action="/dfa/member" method="get">
								<div class="form-group row">
									<label for="email" class="col-sm-1 col-form-label">Email</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{{search-email}}}">
									</div>
								</div>
								<div class="form-group row">
									<legend class="col-form-label col-sm-1 pt-0">Status</legend>
									<div class="col-sm-10">
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-all" value="" {{#unless search-status}}checked{{/unless}}>
											<label class="form-check-label" for="status-all">
												ALL
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-wait" value="WAIT" {{#eq search-status 'WAIT'}}checked{{/eq}}>
											<label class="form-check-label" for="status-wait">
												WAIT
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-lock" value="LOCK" {{#eq search-status 'LOCK'}}checked{{/eq}}>
											<label class="form-check-label" for="status-lock">
												LOCK
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-expired" value="EXPIRED" {{#eq search-status 'EXPIRED'}}checked{{/eq}}>
											<label class="form-check-label" for="status-expired">
												EXPIRED
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-active" value="ACTIVE" {{#eq search-status 'ACTIVE'}}checked{{/eq}}>
											<label class="form-check-label" for="status-active">
												ACTIVE
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-withdrawal" value="WITHDRAWAL" {{#eq search-status 'WITHDRAWAL'}}checked{{/eq}}>
											<label class="form-check-label" for="status-withdrawal">
												WITHDRAWAL
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="status" id="status-credential-expired" value="CREDENTIAL_EXPIRED" {{#eq search-status 'CREDENTIAL_EXPIRED'}}checked{{/eq}}>
											<label class="form-check-label" for="status-credential-expired">
												CREDENTIAL EXPIRED
											</label>
										</div>
									</div>
								</div>
								<div class="form-group row">
									<label for="writer" class="col-sm-1 col-form-label"></label>
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary col-sm-1">검색</button>
										<a href="/dfa/member" class="btn btn-secondary col-sm-1">초기화</a>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>

				<div class="card mb-12">
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th scope="col">Username</th>
										<th scope="col">Email</th>
										<th scope="col">Status</th>
										<th scope="col">Authority</th>
										<th scope="col">Create At</th>
									</tr>
								</thead>
								<tbody>
								{{#each list}}
									<tr>
										<td><a href="/dfa/member/{{id}}">{{{username}}}</a></td>
										<td>{{email}}</td>
										<td>{{status}}</td>
										<td>{{authority}}</td>
										<td>{{df createAt "yyyy.MM.dd"}}</td>
									</tr>
								{{/each}}
								</tbody>
							</table>
							<div class="col-md-12 d-flex justify-content-center">
								{{#if pagination}}
									<nav id="nav-pagination" aria-label="Page navigation">
										<ul class="pagination justify-content-center">
											{{#if previousPageNum}}
												<li class="page-item">
													<a class="page-link" href="/dfa/member?page={{previousPageNum}}" aria-label="Previous">
													<span aria-hidden="true">&laquo;</span>
													<span class="sr-only">Previous</span>
													</a>
												</li>
											{{/if}}
											{{#each pageNumList}}
												<li class="page-item {{#eq this currentPageNum}}active{{/eq}}"><a class="page-link" href="/dfa/member?page={{sub this 1}}">{{this}}</a></li>
											{{/each}}
											{{#if nextPageNum}}
												<li class="page-item">
													<a class="page-link" href="/dfa/member?page={{nextPageNum}}" aria-label="Next">
													<span aria-hidden="true">&raquo;</span>
													<span class="sr-only">Next</span>
													</a>
												</li>
											{{/if}}
										</ul>
									</nav>
								{{/if}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	{{/inline}}
	{{#*inline "js"}}
	{{/inline}}
{{/admin/layout/default}}