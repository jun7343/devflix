{{#>admin/layout/default title="Devflix Admin Dev Youtube List" nav='youtube-list'}}
	{{#*inline "content"}}
		<style>
			.btn-div .btn {
				margin: 0 8px;
			}
		</style>
		<main>
			<div class="container-fluid">
				<h1 class="mt-4">Youtube Channel List</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">Dev Post</li>
					<li class="breadcrumb-item active">Youtube Channel List</li>
				</ol>
				<div class="card mb-4">
					<div class="card-body">
						<div id="form" class="contact-form">
							<h1>유튜브 채널 등록</h1>
							{{#if errorMessage}}
								<div class="row">
									<div class="alert alert-danger col-md-12" role="alert" style="text-align: center">
										{{errorMessage}}
									</div>
								</div>
							{{/if}}
							{{#if successMessage}}
								<div class="row">
									<div class="alert alert-success col-md-12" role="alert" style="text-align: center">
										{{successMessage}}
									</div>
								</div>
							{{/if}}
							<form id="youtube-channel-save-form" action="/dfa/dev-post/youtube-list/save" method="post">
								<div class="form-group row">
									<label for="url" class="col-sm-1 col-form-label">URL</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="url" name="url" placeholder="URL">
									</div>
								</div>
								<div class="form-group row">
									<label for="category" class="col-sm-1 col-form-label">Category</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="category" name="category" placeholder="Category">
									</div>
								</div>
								<input type="hidden" name="{{csrf_parameter}}" value="{{csrf_token}}">
								<div class="form-group row">
									<label for="writer" class="col-sm-1 col-form-label"></label>
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary col-sm-1">등록</button>
										<a href="/dfa/dev-post/youtube-list" class="btn btn-secondary col-sm-1">초기화</a>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>

				<div class="card mb-12">
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th scope="col">Channel Title</th>
										<th scope="col">URL</th>
										<th scope="col">Category</th>
										<th scope="col">Status</th>
									</tr>
								</thead>
								<tbody>
								{{#each list}}
									<tr>
										<td><a href="/dfa/dev-post/youtube-list/{{id}}">{{channelTitle}}</a></td>
										<td><a href="https://www.youtube.com/channel/{{channelId}}" target="_blank">https://www.youtube.com/channel/{{channelId}}</a></td>
										<td>{{category}}</td>
										<td>{{status}}</td>
									</tr>
								{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</main>
	{{/inline}}
	{{#*inline "js"}}
	{{/inline}}
{{/admin/layout/default}}