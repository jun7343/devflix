{{#>admin/layout/default title=item.title nav='contact-me'}}
	{{#*inline "content"}}
		<style>
			.btn-div .btn {
				margin: 0 8px;
			}
		</style>
		<main>
			<div class="container-fluid">
				<h1 class="mt-4">{{item.title}}</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item">Contact Me</li>
					<li class="breadcrumb-item">{{item.title}}</li>
				</ol>
				<div class="card mb-12">
					<div class="card-body">
						{{#if errorMessage}}
							<div class="row">
								<div class="alert alert-danger col-md-12" role="alert" style="text-align: center">
									{{errorMessage}}
								</div>
							</div>
						{{/if}}
						{{#if successMessage}}
							<div class="row">
								<div class="alert alert-success col-md-12" role="alert" style="text-align: center">
									{{successMessage}}
								</div>
							</div>
						{{/if}}
						<div class="table-responsive">
							<form id="contact-me-detail-form" action="/dfa/contact-me/{{item.id}}" method="post">
								<div class="form-group row">
									<label for="title" class="col-sm-2 col-form-label">Title</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="title" value="{{{item.title}}}" readonly>
									</div>
								</div>
								<div class="form-group row">
									<label for="email" class="col-sm-2 col-form-label">Email</label>
									<div class="col-sm-10">
										<input type="email" class="form-control" id="email" value="{{item.email}}" readonly>
									</div>
								</div>
								<div class="form-group row">
									<label for="content" class="col-sm-2 col-form-label">Contecnt</label>
									<div class="col-sm-10">
										<textarea id="content">{{{item.content}}}</textarea>
									</div>
								</div>
								<div class="form-group row">
									<label for="answer" class="col-sm-2 col-form-label">Answer Content</label>
									<div class="col-sm-10">
										<textarea id="answer" name="answer"></textarea>
									</div>
								</div>
								<input type="hidden" name="{{csrf_parameter}}" value="{{csrf_token}}">
								<div class="form-group row">
									<label for="writer" class="col-sm-2 col-form-label"></label>
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary col-sm-2">답변 전송</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</main>
	{{/inline}}
	{{#*inline "js"}}
		<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
		<script>
			$(function () {
				$('#content').summernote({
					toolbar: false,
					height: 300
				});

				$('#content').summernote('disable');

				$('#answer').summernote({
					toolbar: false,
					height: 300
				});
			})
		</script>
	{{/inline}}
{{/admin/layout/default}}