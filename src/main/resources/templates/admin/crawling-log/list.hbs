{{#>admin/layout/default title="Devflix Crawling Log List" nav='crawling-log'}}
	{{#*inline "content"}}
		<style>
			.btn-div .btn {
				margin: 0 8px;
			}
		</style>
		<main>
			<div class="container-fluid">
				<h1 class="mt-4">Craling Log List</h1>
				<ol class="breadcrumb mb-4">
					<li class="breadcrumb-item active">Craling Log List</li>
				</ol>
				<div class="card mb-4">
					<div class="card-body">
						<div id="form" class="contact-form">
							<form id="crawling-log-list-search-form" action="/dfa/crawling-log" method="get">
								<div class="form-group row">
									<label for="job-name" class="col-sm-1 col-form-label">Job Name</label>
									<div class="col-sm-10">
										<input type="text" class="form-control" id="job-name" name="job-name" placeholder="Job Name" value="{{{search-job-name}}}">
									</div>
								</div>
								<div class="form-group row">
									<label for="writer" class="col-sm-1 col-form-label"></label>
									<div class="col-sm-10">
										<button type="submit" class="btn btn-primary col-sm-1 ">검색</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>

				<div class="card mb-12">
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th scope="col">Job Name</th>
										<th scope="col">Start At</th>
										<th scope="col">End At</th>
										<th scope="col">Total Crawling</th>
										<th scope="col">Message</th>
										<th scope="col">Success</th>
									</tr>
								</thead>
								<tbody>
								{{#each list}}
									<tr>
										<td>{{jobName}}</td>
										<td>{{jobStartAt}}</td>
										<td>{{jobEndAt}}</td>
										<td>{{totalCrawling}}</td>
										<td>{{{this.message}}}</td>
										<td>{{#if success}}<span style="color: green">SUCCESS</span>{{else}}<span style="color: red">FALSE</span>{{/if}}</td>
									</tr>
								{{/each}}
								</tbody>
							</table>
							<div class="col-md-12 d-flex justify-content-center">
								{{#if pagination}}
									<nav id="nav-pagination" aria-label="Page navigation">
										<ul class="pagination justify-content-center">
											{{#if previousPageNum}}
												<li class="page-item">
													<a class="page-link" href="/dfa/crawling-log?page={{previousPageNum}}" aria-label="Previous">
													<span aria-hidden="true">&laquo;</span>
													<span class="sr-only">Previous</span>
													</a>
												</li>
											{{/if}}
											{{#each pageNumList}}
												<li class="page-item {{#eq this currentPageNum}}active{{/eq}}"><a class="page-link" href="/dfa/crawling-log?page={{sub this 1}}">{{this}}</a></li>
											{{/each}}
											{{#if nextPageNum}}
												<li class="page-item">
														<a class="page-link" href="/dfa/crawling-log?page={{nextPageNum}}" aria-label="Next">
														<span aria-hidden="true">&raquo;</span>
														<span class="sr-only">Next</span>
													</a>
												</li>
											{{/if}}
										</ul>
									</nav>
								{{/if}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	{{/inline}}
	{{#*inline "js"}}
	{{/inline}}
{{/admin/layout/default}}