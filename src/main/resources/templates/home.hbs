{{#> layout/default title="Devflix"}}
  {{#*inline "content"}}
	  <style>
		  .page-link {
			  color: black;
			  background-color: white;
			  border-style: hidden;
			  font-weight: 800;
			  margin-top: 50px;
		  }
	  </style>
	  <main class="home no-padding" role="main">
		  <section class="hero" style="background-image: url('https://res.cloudinary.com/dm7h7e8xj/image/upload/v1559821647/theme6_qeeojf.jpg')">
			  <div class="pixels"></div>
			  <div class="gradient"></div>
			  <div class="content">
				  <time datetime="2021.01.90 class="date">
				  </time>
				  <h1 class="title">Welcome to the desert of the real</h1>
				  <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
				  <div class="buttons">
					  <a href="" role="button" class="button">
						  <svg><use xlink:href="#icon-read"></use></svg>
						  <span>Read Now</span>
					  </a>
				  </div>
			  </div>
		  </section>
		  <section id="grid" class="row-main flex-grid">
			  {{#each list}}
			  <article class="box-item">
          <span class="category">
              <a href="{{url}}">
                  <span>{{ category }}</span>
              </a>
          </span>
				  <div class="box-body">
					  <a class="cover" href="{{url}}">
						  {{>layout/include/loader}}
						  <img src="/assets/img/placeholder.png" width="100%" data-url="{{ thumbnail }}" class="preload">
						  <noscript>
							  <img src="{{ thumbnail }}" width="100%">
						  </noscript>
						  {{#isNewPost uploadAt}}
							  {{>layout/include/new-post-tag}}
						  {{/isNewPost}}
						  {{>layout/include/read-icon}}
					  </a>
					  <div class="box-info">
						  <time datetime="{{ uploadAt }}" class="date">
							  {{df uploadAt}}
						  </time>
						  <a class="post-link" href="{{ url }}">
							  <h2 class="post-title">
								  {{ title }}
							  </h2>
						  </a>
						  <a class="post-link" href="{{ url }}">
							  <p class="description">{{textOverflow description}}</p>
						  </a>
						  <div class="tags">
							  {{#each tag}}
							    <a href="{{url}}">#{{ this }}</a>
							  {{/each}}
						  </div>
					  </div>
				  </div>
			  </article>
			  {{/each}}
		  </section>
		  <nav id="nav-pagination" aria-label="Page navigation">
			  <ul class="pagination justify-content-center pagination-lg">
				  {{#if previousPage}}
				  <li class="page-item">
					  <a class="page-link" href="/?page={{previousPageNum}}" aria-label="Previous">
						  <span aria-hidden="true">&laquo;</span>
						  <span class="sr-only">Previous</span>
					  </a>
				  </li>
				  {{/if}}
				  {{#each pageNumList}}
				  <li class="page-item {{#eq this currentPageNum}}active{{/eq}}"><a class="page-link" href="/?page={{sub this 1}}">{{this}}</a></li>
				  {{/each}}
				  {{#if nextPage}}
				  <li class="page-item">
					  <a class="page-link" href="/?page={{nextPageNum}}" aria-label="Next">
						  <span aria-hidden="true">&raquo;</span>
						  <span class="sr-only">Next</span>
					  </a>
				  </li>
				  {{/if}}
			  </ul>
		  </nav>
	  </main>
  {{/inline}}
  {{#*inline "js"}}
  {{/inline}}
{{/layout/default}}