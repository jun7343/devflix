{{#> layout/default title="Devflix" background-black=true}}
  {{#*inline "content"}}
	  <style>
		  .page-link {
			  color: black;
			  background-color: white;
			  border-style: hidden;
			  font-weight: 800;
			  margin-top: 50px;
		  }
	  </style>
	  <main class="home no-padding" role="main">
		  <section class="hero" style="background-image: url('{{banner.thumbnail}}')">
			  <div class="pixels"></div>
			  <div class="gradient"></div>
			  <div class="content">
				  <time datetime="{{banner.uploadAt}}" class="date">
					  {{df banner.uploadAt}}
				  </time>
				  <h1 class="title">{{{textOverflow banner.title 50}}}</h1>
				  <p class="description">{{{textOverflow banner.description 50}}}</p>
				  <div class="buttons">
					  <a href="{{banner.url}}" role="button" class="button view-anchor">
						  {{#eq banner.postType 'BLOG'}}
							  <svg><use xlink:href="#icon-read"></use></svg>
							  <span>Read Now</span>
						  {{else}}
							  <?xml version="1.0" standalone="no"?>
							  <!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 20010904//EN"
							  "http://www.w3.org/TR/2001/REC-SVG-20010904/DTD/svg10.dtd">
							  <svg version="1.0" xmlns="http://www.w3.org/2000/svg" width="512.000000pt" height="512.000000pt" viewBox="0 0 512.000000 512.000000" preserveAspectRatio="xMidYMid meet">
								  <g transform="translate(0.000000,512.000000) scale(0.100000,-0.100000)" fill="#ff0a16" stroke="none">
									  <path d="M651 4205 c-142 -31 -252 -86 -356 -176 -123 -108 -207 -240 -262
-415 l-28 -89 0 -965 0 -965 28 -89 c92 -293 294 -501 562 -578 l80 -23 1885
0 1885 0 80 23 c268 77 470 285 562 578 l28 89 0 965 0 965 -28 89 c-91 291
-289 496 -556 578 l-76 23 -1870 2 c-1567 1 -1880 -1 -1934 -12z m2297 -1155
c468 -267 852 -487 852 -490 0 -4 -739 -427 -1762 -1008 l-58 -33 0 1041 0
1041 58 -33 c32 -18 442 -251 910 -518z"/>
								  </g>
							  </svg>
							  <span>Watch Now</span>
						  {{/eq}}
					  </a>
				  </div>
			  </div>
		  </section>
		  <section id="grid" class="row-main flex-grid">
			  {{#each list}}
			  <article class="box-item">
          <span class="category">
            <a href="/category/{{category}}">
                <span>{{ category }} - {{ postType }}</span>
            </a>
          </span>
				  <div class="box-body">
					  <a class="cover view-anchor" href="{{url}}">
						  {{>layout/include/loader}}
						  <img src="/assets/img/placeholder.png" width="100%" data-url="{{ thumbnail }}" class="preload">
						  <noscript>
							  <img src="{{ thumbnail }}" width="100%">
						  </noscript>
						  {{#isNewPost createAt}}
							  {{>layout/include/new-post-tag}}
						  {{/isNewPost}}
						  {{>layout/include/read-icon}}
					  </a>
					  <div class="box-info">
						  <time datetime="{{ uploadAt }}" class="date">
							  {{df uploadAt}}
						  </time>
						  <a class="post-link view-anchor" href="{{ url }}">
							  <h2 class="post-title">
								  {{{ title }}}
							  </h2>
						  </a>
						  <a class="post-link view-anchor" href="{{ url }}">
							  <p class="description">{{{textOverflow description 100}}}</p>
						  </a>
						  {{#if tag}}
						  <div class="tags">
							  {{#each tag}}
							    <a href="/tag/{{this}}">#{{ this }}</a>
							  {{/each}}
						  </div>
						  {{/if}}
					  </div>
				  </div>
			  </article>
			  {{/each}}
		  </section>
		  {{#if pagination}}
		  <nav id="nav-pagination" aria-label="Page navigation">
			  <ul class="pagination justify-content-center pagination-lg">
				  {{#if previousPage}}
				  <li class="page-item">
					  <a class="page-link" href="/?page={{previousPageNum}}" aria-label="Previous">
						  <span aria-hidden="true">&laquo;</span>
						  <span class="sr-only">Previous</span>
					  </a>
				  </li>
				  {{/if}}
				  {{#each pageNumList}}
				  <li class="page-item {{#eq this currentPageNum}}active{{/eq}}"><a class="page-link" href="/?page={{sub this 1}}">{{this}}</a></li>
				  {{/each}}
				  {{#if nextPage}}
				  <li class="page-item">
					  <a class="page-link" href="/?page={{nextPageNum}}" aria-label="Next">
						  <span aria-hidden="true">&raquo;</span>
						  <span class="sr-only">Next</span>
					  </a>
				  </li>
				  {{/if}}
			  </ul>
		  </nav>
		  {{/if}}
	  </main>
  {{/inline}}
  {{#*inline "js"}}
  {{/inline}}
{{/layout/default}}